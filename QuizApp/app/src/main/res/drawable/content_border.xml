<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="16dp" />
            <stroke
                android:width="10dp"
                android:color="#FFCC80" /> <!-- Light orange border -->
        </shape>
    </item>

    <!-- Inner content area -->
    <item
        android:left="18dp"
        android:right="18dp"
        android:top="18dp"
        android:bottom="18dp">
        <shape android:shape="rectangle">
            <solid android:color="#E0F7FA" /> <!-- Light blue content area -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
