<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFDEE9"
                android:endColor="#B5FFFC"
                android:angle="45"/>
        </shape>
    </item>

    <!-- Subtle overlay pattern -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33FFFFFF" /> <!-- Transparent white overlay -->
        </shape>
    </item>

    <!-- Outer border (can adjust color and width as needed) -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#FFAB91" /> <!-- Example: Light orange border -->
        </shape>
    </item>

</layer-list>
